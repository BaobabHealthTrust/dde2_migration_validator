<style type="text/css">
#container {
  background-color: beige;
  padding: 10px;
  margin: 10px;
}

#premigration {
  width: 1158px;
  background-color: beige; 
  }

.figures {
  text-align:center; 
  vertical-align:middle;
  width: 50%;
}

#header {
 width: 1168px;
 margin-left: auto;
 margin-right: auto;
 background-color: beige;
 clear: both;
}

.odd {
 background-color: #FF9999;
}

.even {
 background-color: #FFCCCC;
}

table {
 border-collapse: collapse;
 width: 1158px;
}

table, th, td
{
  border: 1px solid black;
}

td{
	text-align: left;
	padding-left: 10px;

}

.figures {
	text-align: right;
	padding-right: 10px;
}

body {
	width: 1200px;
	margin-left: auto;
	margin-right: auto;
}

</style>
<div id ="container">
<div id="header">
<h1><%= @site_name %> Pre-migration Report</h1>
</div>

<div id="premigration">
<table>
<% @migration_stats.each do |k,v| %>
     <tr class="<%= cycle('even', 'odd') %>">
      <td>
 <%= k.split("_").join(" ").humanize + ":" %>
      </td>
  <td class="figures">
 <%= v.to_s %>
      </td>
     </tr>
<%end%>
</table>
<p><%= link_to "Post migration Report", "/people/postmigration" %></p>
<p><%= link_to "Migration Validator", "/people/index" %></p>
</div>
</div> 
